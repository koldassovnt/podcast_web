@model podcast_web.ViewModels.UserViewModel
@{
    ViewBag.Title = "Index";
}

<br />
<br />
<br />

<div class="container">

    <div class="row">

        <div class="col-lg-3">
            <div class="px-4 pt-0 pb-4 cover">
                <div class="media align-items-end profile-head">
                    <div class="profile mr-3"><img src="https://images.unsplash.com/photo-1522075469751-3a6694fb2f61?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="..." width="130" class="rounded mb-2 img-thumbnail"><a href="#" class="btn btn-outline-dark btn-sm btn-block">Edit profile</a></div>
                    <div class="media-body mb-5 text-white">
                        <h4 class="mt-0 mb-0">@Model.User.FullName()</h4>
                        <p class="small mb-4"> <i class="fas fa-map-marker-alt mr-2"></i>@Model.User.Birthdate</p>
                    </div>
                </div>
            </div>
            <div class="px-4 py-3">
                <div class="p-4 rounded shadow-sm bg-light">
                    @foreach (var r in Model.Roles)
                    {
                        <h4 class="font-italic mb-0">@r.Name</h4>
                    }
                </div>
                @if (Model.Roles.FirstOrDefault(r => r.Name == "ROLE_ADMIN") != null)
                {
                    <a href = "/ManageUsers/UserList" class="btn btn-primary">Admin panel</a>

                }
            </div>
        </div>
        <!-- /.col-lg-3 -->

        <div class="col-lg-9">
            <div class="row">
                @if (Model.Podcasts.Count == 0)
                {
                    <p>No podcasts yet!</p>
                }

                else
                {
                    foreach (var p in Model.Podcasts)
                    {
                        <div class="card">
                            <div class="embed-responsive embed-responsive-16by9">
                                <img src="@p.ImgSource" class="card-img-top" alt="...">
                            </div>
                            <div class="card-body">
                                <h3 class="card-title" style="margin:0;">@p.Title</h3>
                                <p class="card-text">@p.Description</p>
                                <a href="/Podcast/Detail/@p.PodcastId" class="btn btn-primary">Detail</a>
                            </div>
                            <div class="card-footer">@p.Date</div>

                        </div>
                        <hr class="my-4">

                    }
                }
            </div>
        </div>
    </div>

