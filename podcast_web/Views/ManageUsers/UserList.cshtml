@model podcast_web.ViewModels.AuthViewModel

@{
    ViewBag.Title = "PlatformList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1></h1>
<h1></h1>
<h1></h1>
<h1></h1>

<div class="row mt-5">
    <div class="">
        <button type="button" style="margin-left: 10px;" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Add User
        </button>
    </div>
</div>

<div class="row mt-8">
    <div class="col-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NAME</th>
                    <th>SURNAME</th>
                    <th>EMAIL</th>
                    <th>BIRTHDATE</th>
                    <th>ACTION</th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Users.Count == 0)
                {
                    <tr>
                        <td>No users yet!</td>
                    </tr>
                }
                else
                {
                    foreach (var u in Model.Users)
                    {
                        <tr>
                            <td>@u.UserId</td>
                            <td>@u.Name</td>
                            <td>@u.Surname</td>
                            <td>@u.Email</td>
                            <td>@u.Birthdate</td>
                            <td>
                                <a href="/ManageUsers/EditUser/@u.UserId" class="btn btn-primary">Detail</a>
                                <a style="margin-left:4px;" href="/ManageUsers/DeleteUser/@u.UserId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>





