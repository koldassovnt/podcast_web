@model podcast_web.ViewModels.PlatformViewModel

@{
    ViewBag.Title = "PlatformList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1></h1>
<h1></h1>
<h1></h1>
<h1></h1>

<div class="row mt-5">
    <div class="">
        <button type="button" style="margin-left: 10px;" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
            Add Platform
        </button>
    </div>
</div>

<div class="row mt-8">
    <div class="col-12">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NAME</th>
                    <th>ACTION</th>

                </tr>
            </thead>
            <tbody>
                @if (Model.Platforms.Count == 0)
                {
                    <tr>
                        <td>No podcasts yet!</td>
                    </tr>
                }
                else
                {
                    foreach (var p in Model.Platforms)
                    {
                        <tr>
                            <td>@p.PlatformId</td>
                            <td>@p.Name</td>
                            <td>
                                <a href="/ManagePlatforms/EditPlatform/@p.PlatformId" class="btn btn-primary">Detail</a>
                                <a style="margin-left:4px;" href="/ManagePlatforms/DeletePlatform/@p.PlatformId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>





<div class="modal fade" id="exampleModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Add Company</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("PlatformList", "ManagePlatforms", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>
                            Platform Name:
                            <input type="text" class="form-control" name="name">
                        </label>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-success">Add</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

