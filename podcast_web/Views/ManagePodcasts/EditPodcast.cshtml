@model podcast_web.Models.Podcast
@{
    ViewBag.Title = "EditPodcast";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1></h1>
<h1></h1>
<h1></h1>
<h1></h1>

<form action="EditPodcast" method="post">
    <input type="hidden" value="@Model.PodcastId" name="id" />
    <div class="form-group">
        <label>
            Podcast Title:
            <input type="text" class="form-control" name="title" value="@Model.Title" >
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Description:
            <input type="text" class="form-control" name="description" value="@Model.Description">
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Date:
            <input class="form-control" data-date-format="yyyy/mm/dd" id="datepicker_add" name="date" value="@Model.Date">
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Source:
            <input type="text" class="form-control" name="source" value="@Model.Source">
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Edit</button>
    </div>
</form>


