@model podcast_web.Models.Podcast
@{
    ViewBag.Title = "EditPodcast";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}

<h1></h1>
<h1></h1>
<h1></h1>
<h1></h1>

@using (Html.BeginForm("EditPodcast", "ManagePodcasts", FormMethod.Post))
{
    @Html.HiddenFor(model => model.PodcastId)
    <div class="form-group">
        <label>
            Podcast Title:
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Description:
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Date:
            @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" } })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Source:
            @Html.EditorFor(model => model.Source, new { htmlAttributes = new { @class = "form-control" } })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Img Source:
            @Html.EditorFor(model => model.ImgSource, new { htmlAttributes = new { @class = "form-control" } })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Author:
            @Html.DropDownListFor(model => model.AuthorID, ViewBag.Authors as SelectList, new { @class = "form-control" })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Programming Language:
            @Html.DropDownListFor(model => model.ProgrammingLanguageID, ViewBag.ProgrammingLanguages as SelectList, new { @class = "form-control" })
        </label>
    </div>
    <div class="form-group">
        <label>
            Podcast Audio:
            @Html.DropDownListFor(model => model.AudioId, ViewBag.Audios as SelectList, new { @class = "form-control" })
        </label>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Edit</button>
    </div>

}


