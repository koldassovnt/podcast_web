@model podcast_web.Models.Author

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<br />
<br />

<div style="display: flex; justify-content:flex-end; flex-direction:column; align-items:center;">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title" style="margin:0;">@Model.Name  @Model.Surname</h2>
            <p class="card-text">@Model.AuthorJob</p>
        </div>
        <div class="card-footer">
            <h4 class="card-text">@ViewBag.Company.Name</h4>
        </div>

    </div>
</div>